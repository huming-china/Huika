<resources>

  <!-- Base application theme. -->
  <style name="AppTheme"
      parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <!--设置Activity透明-->
    <item name="android:windowIsTranslucent">true</item>

  </style>

  <style name="AppTheme.AppBarOverlay"
      parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay"
      parent="ThemeOverlay.AppCompat.Light"/>
  <style name="main_tab_icon">
    <item name="android:layout_alignParentTop">true</item>
    <item name="android:layout_marginTop">9dp</item>
    <item name="android:layout_width">20dp</item>
    <item name="android:layout_height">20dp</item>
    <item name="android:background">@null</item>
    <item name="android:layout_centerHorizontal">true</item>
  </style>
  <style name="main_tab_tv">
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_alignParentBottom">true</item>
    <item name="android:layout_marginBottom">5dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">11sp</item>
    <item name="android:textColor">@color/color_selector_main_tab</item>
  </style>

  <style name="me_section_title_left">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_alignParentLeft">true</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">#333333</item>
  </style>


  <style name="me_section_pop_tv">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:drawablePadding">6dp</item>
    <item name="android:textSize">11sp</item>
    <item name="android:textColor">#666666</item>
  </style>

  <style name="me_section_pop_num">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">-10dp</item>
    <item name="android:layout_marginTop">-5dp</item>
    <item name="android:background">@drawable/bg_pop_num</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">10sp</item>
    <item name="android:textColor">#ffffff</item>
  </style>
  <declare-styleable name="RoundImageView">
    <attr name="border_thickness" format="dimension" />
    <attr name="border_outside_color" format="color" />
    <attr name="border_inside_color" format="color" />
  </declare-styleable>
</resources>
