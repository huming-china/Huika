<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleContainer"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:background="@color/common_title_red"
    android:gravity="center_vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/titleleft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:paddingRight="10dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/category_icon" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/index_shopcar"
        android:layout_toRightOf="@id/titleleft"
        android:background="@drawable/search_bg_color"
        android:padding="0dp" >

        <TextView
            android:id="@+id/searchTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#b2b2b2"
            android:paddingLeft="28dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/consume_serch_icon" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/index_shopcar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:paddingRight="10dp"

        android:src="@drawable/index_shop_cart" />

    <TextView
        android:id="@+id/cart_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/number_bg"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:padding="0dp"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>